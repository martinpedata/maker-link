<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/leaderboardCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="5dp"
        app:cardCornerRadius="15dp"
        android:backgroundTint="@color/better_blue"
        android:layout_marginHorizontal="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <!-- Added CardView for the position indicator -->
            <androidx.cardview.widget.CardView
                android:id="@+id/placementCard"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                app:cardCornerRadius="4dp"
                app:cardBackgroundColor="@color/teal_500">

                <TextView
                    android:id="@+id/placementText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="1st"
                    android:textSize="18sp"
                    android:fontFamily="@font/montserrat_bold"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/nameUserLeaderboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/placementCard"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:text="User Name"
                android:textColor="@color/cream"
                android:textSize="20sp"
                android:fontFamily="@font/montserrat_semibold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_marginEnd="30dp"
                android:padding="5dp">

                <TextView
                    android:id="@+id/pointsText"
                    android:padding="2dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="points"
                    android:textColor="@color/cream"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/montserrat_semibold_italic"/>

                <ImageView
                    android:id="@+id/badge"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/level2" />
            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>