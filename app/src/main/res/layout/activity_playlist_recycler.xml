<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainPlaylist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".playlists.PlaylistRecyclerActivity"
    android:background="@color/better_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="60dp"
            android:id="@+id/headingRecyclerPlaylist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textColor="@color/cream"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat_medium"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/my_recycler_playlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="6dp"
            android:layout_marginBottom="100dp" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addPlaylist"
        android:onClick="createPlaylistButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="30dp"
        android:contentDescription="New Playlist"
        android:src="@android:drawable/ic_input_add"
        app:backgroundTint="@color/cream"
        app:tint="@color/teal_500" />

</FrameLayout>
