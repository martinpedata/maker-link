<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navigation_pages.chats.CreateActivity"
    android:orientation="vertical"
    android:background="@drawable/backgroundsignup">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="150dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp"
            android:background="@drawable/custom_background_login"
            android:backgroundTint="@color/darkCream">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="352dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/createText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lender Info"
                    android:textAlignment="center"
                    android:textColor="@color/brown"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/rent"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/custom_background_login"
                    android:drawablePadding="8dp"
                    android:hint="Rent"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/teal_500" />

                <EditText
                    android:id="@+id/tool"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/custom_background_login"
                    android:drawablePadding="8dp"
                    android:hint="Tooltype"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/teal_500" />

                <Button
                    android:id="@+id/homeButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/brown"
                    android:text="To home"
                    android:textSize="18sp"
                    app:cornerRadius="20dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>