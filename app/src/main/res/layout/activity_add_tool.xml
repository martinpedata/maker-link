<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".access.Lender"
    android:orientation="vertical"
    android:background="@drawable/backgroundsignup">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="50dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp"
            android:background="@drawable/custom_background_login"
            android:backgroundTint="@color/darkCream">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="620dp"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/createText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Tool"
                        android:textAlignment="center"
                        android:textColor="@color/brown"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/montserrat_medium"/>
                    <EditText
                        android:id="@+id/addressoftool"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/custom_background_login"
                        android:drawablePadding="8dp"
                        android:hint="Address"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/teal_500"
                        android:fontFamily="@font/montserrat_medium"/>
                    <EditText
                        android:id="@+id/rent"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/custom_background_login"
                        android:drawablePadding="8dp"
                        android:hint="Rent"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/teal_500"
                        android:fontFamily="@font/montserrat_medium"/>

                    <EditText
                        android:id="@+id/tool"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/custom_background_login"
                        android:drawablePadding="8dp"
                        android:hint="Tooltype"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/teal_500"
                        android:fontFamily="@font/montserrat_medium"/>
                    <EditText
                        android:id="@+id/starttime"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/custom_background_login"
                        android:drawablePadding="8dp"
                        android:hint="Start time of day"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/teal_500"
                        android:fontFamily="@font/montserrat_medium"/>
                    <EditText
                        android:id="@+id/endtime"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/custom_background_login"
                        android:drawablePadding="8dp"
                        android:hint="End time of day"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/teal_500"
                        android:fontFamily="@font/montserrat_medium"/>
                    <EditText
                        android:id="@+id/description_of_tools"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/custom_background_login"
                        android:drawablePadding="8dp"
                        android:hint="Description"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/teal_500"
                        android:fontFamily="@font/montserrat_medium"/>

                    <Button
                        android:id="@+id/homeButton"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="@color/brown"
                        android:text="To home"
                        android:textSize="18sp"
                        app:cornerRadius="20dp"
                        android:fontFamily="@font/montserrat_medium"/>

                </LinearLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>