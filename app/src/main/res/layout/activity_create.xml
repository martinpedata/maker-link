<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navigation_pages.chats.CreateActivity"
    android:orientation="vertical"
    android:background="@drawable/backgroundsignup">
  <ImageButton
      android:id="@+id/backButton"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:layout_marginTop="30dp"
      android:layout_marginLeft="15dp"
      android:layout_gravity="center_vertical"
      android:background="?attr/selectableItemBackgroundBorderless"
      android:src="@drawable/baseline_arrow_back_24_new"
      android:contentDescription="Back"
      android:padding="8dp"/>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:gravity="center"
      android:layout_marginTop="90dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp"
        android:background="@drawable/custom_background_login"
        android:backgroundTint="@color/darkCream">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/createText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/create_community"
                android:textAlignment="center"
                android:textColor="@color/brown"
                android:textSize="36sp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat_medium"/>

            <EditText
                android:id="@+id/communityname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/custom_background_login"
                android:drawablePadding="8dp"
                android:hint="@string/community_name"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/teal_500"
                android:fontFamily="@font/montserrat_medium"/>

            <EditText
                android:id="@+id/domainname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/custom_background_login"
                android:drawablePadding="8dp"
                android:hint="@string/domain"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/teal_500"
                android:fontFamily="@font/montserrat_medium"/>

            <Button
                android:id="@+id/creationButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/brown"
                android:text="@string/create"
                android:textSize="18sp"
                app:cornerRadius="20dp"
                android:fontFamily="@font/montserrat_medium"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
  </LinearLayout>

</LinearLayout>