<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    tools:context=".threads.post.CreateThreadActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/create_thread_title"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:textAlignment="center"
            android:textColor="@color/brown"
            android:textSize="36sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thread_domain_label"
            android:textColor="@color/teal_500"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_medium"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/white"
            app:cardElevation="6dp"
            app:cardCornerRadius="15dp">
            <EditText
                android:id="@+id/editTextDomain"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/thread_domain_hint"
                android:textColor="@color/brown"
                android:padding="12dp"
                android:textColorHint="#BFA088"
                android:fontFamily="@font/montserrat_medium"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thread_name_label"
            android:textColor="@color/teal_500"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_medium"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="15dp"
            android:backgroundTint="@color/white"
            app:cardElevation="6dp">
            <EditText
                android:id="@+id/editTextThreadName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/thread_name_hint"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/brown"
                android:padding="12dp"
                android:textColorHint="#BFA088"
                android:fontFamily="@font/montserrat_medium"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upload_thumbnail_label"
            android:textColor="@color/teal_500"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserrat_medium"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/threadThumbnail"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="6dp"
            android:clickable="true"
            android:backgroundTint="@color/white"
            android:onClick="onBtnPickClicked"
            android:background="@drawable/mechanics_pic">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/thumbnailImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/placeholderThumbnail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/photo"
                    android:layout_centerInParent="true"
                    app:tint="@color/lightBrown" />

                <TextView
                    android:id="@+id/clickMeThumbnail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/placeholderThumbnail"
                    android:text="@string/click_me"
                    android:fontFamily="@font/montserrat_medium_italic"
                    android:textColor="#BFA088"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/paste_document_url_label"
            android:textColor="@color/teal_500"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserrat_medium"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardVideoPicker"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="6dp"
            android:clickable="true"
            android:backgroundTint="@color/white"
            android:foreground="?attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/weblinkImage"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/embed_icon"
                    app:tint="@color/lightBrown" />

                <EditText
                    android:id="@+id/weblinkText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/weblinkImage"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="0dp"
                    android:hint="@string/url_hint"
                    android:textColor="@color/brown"
                    android:textColorHint="#BFA088"
                    android:fontFamily="@font/montserrat_medium"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/submitThreadButton"
            android:onClick="createThread"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/post_thread_button"
            android:padding="12dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/lightBrown"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/pointsPrefix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/points_prefix"
                android:fontFamily="@font/montserrat_medium_italic"
                android:textSize="13sp"
                android:textColor="@color/teal_500" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:backgroundTint="@color/darkCream"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                android:padding="5dp">
                <TextView
                    android:id="@+id/pointsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/points_text"
                    android:layout_marginHorizontal="6dp"
                    android:textSize="20dp"
                    android:fontFamily="@font/montserrat_semibold_italic"
                    android:textColor="@color/gold" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
