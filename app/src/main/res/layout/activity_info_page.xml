<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkCream"
    android:id="@+id/main">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/orderButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:id="@+id/image_of_user"/>

            <TextView
                android:id="@+id/nameLender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textStyle="bold"
                android:background="@drawable/bubble_background"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/addressLender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/address"
                android:background="@drawable/bubble_background"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/rentlender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rent"
                android:background="@drawable/bubble_background"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/startlender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/start_of_renting"
                android:background="@drawable/bubble_background"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:focusable="false"
                android:clickable="true"/>

            <EditText
                android:id="@+id/endlender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/end_of_renting"
                android:background="@drawable/bubble_background"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:focusable="false"
                android:clickable="true"/>

            <TextView
                android:id="@+id/descriptionlender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:background="@drawable/bubble_background"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/black"/>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/orderButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/order"
        android:backgroundTint="@color/better_blue"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:fontFamily="@font/montserrat_medium"/>
</androidx.constraintlayout.widget.ConstraintLayout>